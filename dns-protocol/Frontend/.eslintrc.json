{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off", // Allow `any` type
    "@typescript-eslint/no-unused-vars": "off", // Disable unused variables check
    "@typescript-eslint/no-unused-expressions": "off", // Disable unused expressions check
    "react-hooks/exhaustive-deps": "off", // Suppress missing dependency warnings in useEffect
    "@next/next/no-img-element": "off" // Allow the use of <img> instead of <Image />
  }
}
